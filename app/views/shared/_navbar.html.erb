<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid goalscontainer">
    <%= link_to "/", class: "navbar-brand" do %>
          <%# <i class="fa-solid fa-bullseye fa-2xl navbar-center"></i> %>
          <div class="d-flex h-100">
            <%= image_tag("trophy.png") %>
            <div class="ms-1">
              <p class="default-header" style="font-size: 26px; line-height: 4px;">Goal</p>
              <p class="default-header" style="font-size: 26px; line-height: 4px;">Keeper</p>
            </div>
          </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto navbar-center">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link nav-text" %>
          </li>
          <li class="nav-item">
            <%= link_to "Goals", goals_path, class: "nav-link nav-text" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.key.present? == true %>
            <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar-large dropdown-toggle", id: "navbarDropdown",
                                            data: { bs_toggle: "dropdown" }, 'aria-haspopup': true,
                                            'aria-expanded': false %>
            <% else %>
            <%= image_tag("default_user_image.png", crop: :fill, class: "avatar-large dropdown-toggle", id: "navbarDropdown",
                                            data: { bs_toggle: "dropdown" }, 'aria-haspopup': true,
                                            'aria-expanded': false) %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item nav-text" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item nav-text" %>
            </div>
          <%# <li class="nav-item nav-name ms-3"><%= current_user.user_name %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link nav-text" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
