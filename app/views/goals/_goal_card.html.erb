<div class="card-product">
  <img src="<%= goal.category_url %>"/>
  <div class="card-product-infos">
    <h2> <%= goal.name %> </h2>
    <%= goal.tasks.first.name %>
    <p><%= goal.likes.count %> <%= (goal.likes.count) == 1 ? 'Like' : 'Likes'%></p>
      <%# <ul> %>
        <%# goal.tasks.each do |task| %>
        <%#= <li>  task.name</li> %>
        <%# end %>
      <%# </ul> %>
    </div>
    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: <%= (goal.progress * 100).round %>%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"> <%= (goal.progress * 100).round %>%
      </div>
    </div>
    <div class="percentage"><%= (goal.progress * 100).round %> %</div>
    <div class="datedue">
      <h3>Date due:</h3>
      <%= goal.tasks.count %> Tasks until <%= goal.end_date %>
    </div>
</div>
